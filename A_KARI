<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender: コンソール出力先 -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} | %-5p [%t] %c - %m%n"/>
        </Console>

        <!-- Rolling File Appender: ローテーションするファイル -->
        <RollingFile name="PROC" 
                    fileName="${sys:SW_D_DATLOG}/ws/waor/sw_${sys:SW_P_PROCHAME_WAOR}.log"
                    filePattern="${sys:SW_D_DATLOG}/ws/waor/sw_${sys:SW_P_PROCHAME_WAOR}.%d{yyyyMMdd}.log">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} | %-5p [%t] %c - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Apache Struts2関連のロガー -->
        <Logger name="org.apache.struts2" level="debug" additivity="false">
            <AppenderRef ref="PROC"/>
        </Logger>

        <!-- MyBatis関連のロガー -->
        <Logger name="org.mybatis" level="debug" additivity="false">
            <AppenderRef ref="PROC"/>
        </Logger>

        <!-- 独自アプリケーション用のロガー (業務ロジック用) -->
        <Logger name="org.app" level="trace" additivity="false">
            <AppenderRef ref="PROC"/>
        </Logger>

        <!-- ルートロガー (全体のデフォルト設定) -->
        <Root level="error">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>
