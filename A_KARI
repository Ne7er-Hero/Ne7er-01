<periodic-rotating-file-handler name="PROC"
                                autoflush="true">
    <formatter>
        <pattern-formatter pattern="%d{yyyy/MM/dd HH:mm:ss.SSS}, %m%n"/>
    </formatter>
    <file relative-to="jboss.server.log.dir" path="proc.log"/>
    <suffix value=".yyyy-MM-dd"/>
    <append value="true"/>
</periodic-rotating-file-handler>

<periodic-rotating-file-handler name="TRAN"
                                autoflush="true">
    <formatter>
        <pattern-formatter pattern="%d{yyyy/MM/dd HH:mm:ss.SSS}, %m%n"/>
    </formatter>
    <file relative-to="jboss.server.log.dir" path="tran.log"/>
    <suffix value=".yyyy-MM-dd"/>
    <append value="true"/>
</periodic-rotating-file-handler>



<logger category="proc" use-parent-handlers="false">
    <level name="INFO"/>
    <handlers>
        <handler name="PROC"/>
    </handlers>
</logger>

<logger category="tran" use-parent-handlers="false">
    <level name="INFO"/>
    <handlers>
        <handler name="TRAN"/>
    </handlers>
</logger>
